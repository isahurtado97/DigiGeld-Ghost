        "gatewayIPConfigurations": [
          {
            "name": "gatewayIpConfig",
            "properties": {
              "subnet": {
                "id": "[reference(resourceId('Microsoft.Network/virtualNetworks', parameters('appGatewayVnetName')), '2023-02-01').subnets[0].id]"

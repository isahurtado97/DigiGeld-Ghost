      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "condition": "[or(parameters('deployAppGateway'), parameters('deployAll'))]",
      "type": "Microsoft.Network/applicationGateways",
      "apiVersion": "2023-02-01",
